@model IEnumerable<OrderManagementSystem.Models.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Agent</th>
        <th>Total Items</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrderID)</td>
            <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
            <td>@Html.DisplayFor(modelItem => item.Agent.AgentName)</td>
            <td>@item.OrderDetails.Count</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.OrderID }, new { @class = "btn btn-sm btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>