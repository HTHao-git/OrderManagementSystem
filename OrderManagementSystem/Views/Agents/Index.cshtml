@model IEnumerable<OrderManagementSystem.Models.Agent>

@{
    ViewBag.Title = "Agents";
}

<h2>Agents</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.AgentName)</th>
        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.AgentName)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AgentID }, new
                    {
                       @class = "btn btn-sm btn-warning"
                    }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AgentID }, new
           {
               @class = "btn btn-sm btn-danger"
                })
            </td>
        </tr>
    }
</table>
